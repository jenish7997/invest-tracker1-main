rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // This is the correct, secure rule.
    // It allows a logged-in user to LIST the investors collection.
    match /investors {
      allow list: if request.auth != null;
    }
    
    // It also allows a logged-in user to access specific documents.
    match /investors/{investorId} {
      allow read, write: if request.auth != null;
    }

    // Apply the same correct pattern for transactions and rates
    match /transactions {
      allow list: if request.auth != null;
    }
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null;
    }

    match /rates {
      allow list: if request.auth != null;
    }
    match /rates/{rateId} {
      allow read, write: if request.auth != null;
    }
  }
}
